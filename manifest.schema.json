                "$ref": "#/definitions/ScreenshotDeclaration"
            },
            "type": "array"
        },
        "showpricingcalculator": {
            "type": "boolean"
        },
        "tags": {
            "anyOf": [
                {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                {
                    "type": "string"
                }
            ]
        },
        "targets": {
